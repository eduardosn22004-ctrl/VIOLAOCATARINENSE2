---
const navItems = [
    { linkText: 'Apresentação', href: '/' },
    { linkText: 'Catálogo', href: '/catalogo' },
    { linkText: 'Compositores e Violonistas', href: '/compositores' },
    { linkText: 'Discografia', href: '/discografia' },
    { linkText: 'Referências', href: '/referencias' },
    { linkText: 'Registros Históricos', href: '/registros' },
    { linkText: 'Participe Conosco', href: '/participe' }
];
---

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@700;900&display=swap" rel="stylesheet">

<header class="relative left-1/2 right-1/2 ml-[-50vw] mr-[-50vw] w-screen bg-red-700 shadow-xl overflow-hidden">
    
    <div class="relative w-full h-56 md:h-72 flex items-center justify-center">
        
        <img 
            src="/images/logo.png" 
            alt="Fundo Violão" 
            class="absolute inset-0 w-full h-full object-contain mix-blend-multiply opacity-40 pointer-events-none -rotate-90 scale-x-[-8] scale-y-[8] translate-x-55 translate-y-10" 
        />

        <h1 class="relative z-10 text-white text-4xl md:text-7xl font-['Cinzel'] font-bold tracking-wider text-center uppercase drop-shadow-[0_4px_4px_rgba(0,0,0,0.8)] px-4">
            VIOLÃO CATARINENSE
        </h1>
    </div>

    <nav class="bg-black/30 border-t border-white/10 py-5">
        <ul class="flex flex-wrap justify-center gap-x-2 md:gap-x-6 gap-y-3 max-w-full mx-auto px-4">
            {navItems.map((item) => (
                <li>
                    <a 
                        href={item.href} 
                        class="text-white text-[10px] md:text-xs lg:text-sm font-bold no-underline uppercase tracking-widest hover:bg-white hover:text-red-700 px-3 py-2 rounded transition-all duration-300 border border-transparent hover:border-white/20"
                    >
                        {item.linkText}
                    </a>
                </li>
            ))}
        </ul>
    </nav>
</header>
