---

<Layout title="Violão Catarinense">
    
    <div class="max-w-4xl mx-auto py-12 px-6">
        
        <h1 class="text-4xl font-bold text-center mb-16 text-gray-900">Referências</h1>

        <section class="mb-16">
            <h2 class="text-2xl font-bold border-b-2 border-gray-200 pb-4 mb-8 text-gray-800">
                Livros e Métodos
            </h2>
            <div class="space-y-6">
                {livros.map((item) => (
                    <div class="text-gray-700 text-lg leading-relaxed pl-8 -indent-8">
                        <Markdown content={item} />
                    </div>
                ))}
            </div>
        </section>

        <section class="mb-16">
            <h2 class="text-2xl font-bold border-b-2 border-gray-200 pb-4 mb-8 text-gray-800">
                TCC's, Dissertações e Teses
            </h2>
            <div class="space-y-6">
                {teses.map((item) => (
                    <div class="text-gray-700 text-lg leading-relaxed pl-8 -indent-8">
                        <Markdown content={item} />
                    </div>
                ))}
            </div>
        </section>

        <section class="mb-16">
            <h2 class="text-2xl font-bold border-b-2 border-gray-200 pb-4 mb-8 text-gray-800">
                Gravações de Áudio e Vídeo
            </h2>
            <div class="space-y-6">
                {gravacoes.map((item) => (
                    <div class="text-gray-700 text-lg leading-relaxed pl-8 -indent-8">
                        <Markdown content={item} />
                    </div>
                ))}
            </div>
        </section>

        {sites.length > 0 && (
            <section class="mb-16">
                <h2 class="text-2xl font-bold border-b-2 border-gray-200 pb-4 mb-8 text-gray-800">
                    Sites
                </h2>
                <ul class="list-disc pl-5 space-y-2">
                    {sites.map((site) => (
                        <li><a href={site.url} target="_blank" class="text-blue-600 hover:underline">{site.nome}</a></li>
                    ))}
                </ul>
            </section>
        )}

    </div>

</Layout>
